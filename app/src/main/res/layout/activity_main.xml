<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pmovil.bacaniadosapp.MainActivity"
    android:background="#fd5805">


    <ImageView

        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/sol"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/sol" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BACANIADOS APP"
        android:id="@+id/textView"
        android:textColor="#040404"
        android:layout_alignTop="@+id/sol"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:text="Â¡La App de tus paseos!"
        android:textColor="#040404"
        android:textSize="22dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/Ingresar" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="INGRESAR"
        android:id="@+id/Ingresar"
        android:layout_alignBottom="@+id/sol"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:layout_alignParentEnd="false"
        android:background="#fcba03"
        android:textColor="#090909" />

 </RelativeLayout>
